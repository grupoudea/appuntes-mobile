<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/materiasFragment">

    <fragment
        android:id="@+id/materiasFragment"

        android:name="co.edu.udea.kplus1.appuntesmobile.fragments.materias.MateriasFragment"
        android:label="MateriasFragment"
        tools:layout="@layout/materias_fragment">
        <action
            android:id="@+id/action_materiasFragment_to_materiasFormFragment"
            app:destination="@id/materiasFormFragment" />
        <action
            android:id="@+id/action_materiasFragment_to_grupoApunteFragment"
            app:destination="@id/grupoApunteFragment" />
    </fragment>
    <fragment
        android:id="@+id/materiasFormFragment"
        android:name="co.edu.udea.kplus1.appuntesmobile.fragments.materias.MateriasFormFragment"
        android:label="MateriasFormFragment"
        tools:layout="@layout/materias_form_fragment" />
    <fragment
        android:id="@+id/materiasPublicasFragment"
        android:name="co.edu.udea.kplus1.appuntesmobile.fragments.materiasPublicas.MateriasPublicasFragment"
        android:label="Apuntes Publicas"
        tools:layout="@layout/materias_publicas_fragment" />
    <fragment
        android:id="@+id/grupoApunteFragment"
        android:name="co.edu.udea.kplus1.appuntesmobile.fragments.apuntes.GrupoApunteFragment"
        android:label="fragment_grupo_apunte"
        tools:layout="@layout/fragment_grupo_apunte" />


</navigation>