
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/skeleton_dimen"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/linearLayoutMaterias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <TextView
                        android:id="@+id/textViewNombreMateria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:background="@drawable/skeleton_card_shadow"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"/>
                </com.facebook.shimmer.ShimmerFrameLayout>


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <TextView
                        android:id="@+id/textViewNombreProfesor"
                        android:layout_width="249dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/skeleton_card_shadow"
                        android:textSize="14sp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <TextView
                        android:id="@+id/textViewCreditos"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/skeleton_card_shadow"
                        android:textSize="14sp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <Button
                    android:id="@+id/buttonMenuMateria"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="10dp"
                    android:text="&#8942;"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="28sp"
                    android:layout_gravity="top|end"
                    android:enabled="false"
                    />
            </com.facebook.shimmer.ShimmerFrameLayout>


        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>





